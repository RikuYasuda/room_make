
<body>
  <main>
      <% if flash[:notice] %>
      <p id="notice">
        <%= flash[:notice] %>
      </p>
    <% end %>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'layouts/list', user: @user %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>My Rooms</h2>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th colspan="3"></th>
              </tr>
            </thead>
              <% @rooms.each do |room| %>
                <tbody>
                  <tr>
                    <td>
                      <%= link_to user_path(room.user_id) do %>
                      <%= attachment_image_tag room, :image, fallback: "no_image.jpg", style: "height: 100px; width:150px;" %>
                      <% end %>
                    <td>
                      <%= link_to room.title , room_path(room.id) %>

                    </td>
                  </tr>
              <% end %>
                </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>

