<body>
  <main>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'layouts/list', user: @user %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Rooms</h2>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th>Picture</th>
                <th>Title </th>
                <th colspan="3"></th>
              </tr>
            </thead>
              <% @rooms.each do |room| %>
                <tbody>
                  <tr>
                    <td><%= link_to room do %>
                    <%= attachment_image_tag room, :image,　fallback: "no-image.png", style: "height: 100px; width:150px;" %></td>
                    <% end %>
                    </td>
                    <td><%= room.title %></td>
                    <td>
                      ❤︎ <%= room.liked_users.count %>
                    </td>
                    <td>
                      <%= link_to "Show" , room_path(room) %>
                    </td>
                  </tr>
              <% end %>
                </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
  <footer></footer>
</body>

