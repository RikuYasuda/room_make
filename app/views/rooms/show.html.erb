
<body>
  <main>
      <% if flash[:notice] %>
      <p id="notice">
        <%= flash[:notice] %>
      </p>
    <% end %>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'layouts/list', user: @user %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Room</h2>
          <table class='table table-hover table-inverse'>
            <thead>
              <tr>
                <th>Picture</th>
                <th>Body</th>
                <th colspan="3">Like</th>
              </tr>
            </thead>
                <tbody>
                  <tr>
                    <td>
                      <%= attachment_image_tag @room, :image,ã€€fallback: "no-image.png", style: "height: 350px; width:350px;" %>
                    </td>
                    <div class="tag-box">
                    <% @room.tags.each do |tag| %>
                    <span class="label"><%= tag.name %></span>
                    <% end %>
                    </div>
                    <td>
                      <%= @room.body %>
                    </td>
                    <td>
                      <%= render 'likes/like', room: @room %> <%= @room.liked_users.count %>
                    </td>
                    <td>
                    <% if @room.user == current_user %>
                      <%= link_to "Edit", edit_room_path(@room), class: 'btn btn-sm btn-success' %>
                  </td>
                  <% end %>
                  <td>
                    <% if @room.user == current_user %>
                    <%= link_to "Destroy", room_path(@room), class: 'btn btn-sm btn-danger', method: :delete, "data-confirm" => "Are you sure?" %>
                  </td>
                  <% end %>
                  </tr>
                </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
  <footer></footer>
</body>
