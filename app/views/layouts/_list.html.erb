<h2>User info</h2>
  <%= attachment_image_tag user, :profile_image, :fill, 200, 300, format: 'jpeg', fallback: "no_image.jpg",size:'300x300' %>

    <table class='table'>
      <th>name</th>
      <th>
        <%= user.name %>
      </th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </table>

    <div class='row'>
        <% if user == current_user %>
        <%= link_to edit_user_path(user), class:'btn btn-outline-secondary btn-block fas fa-user-cog' do %>
        <% end %>
        <% end %>
        <% if user != current_user %>
        <% end %>
    </div>
